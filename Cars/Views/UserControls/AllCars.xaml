<UserControl
    x:Class="Cars.Views.UserControls.AllCars"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cars.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Cars.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:AllCarsVM,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:AllCarsVM />
    </UserControl.DataContext>
    <Grid>
        <TextBox Text="{Binding Information}" />
    </Grid>
</UserControl>
